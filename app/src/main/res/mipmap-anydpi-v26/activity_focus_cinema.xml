<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_success.nearby_cinema_fragment.activity.CinemaDtailActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:background="@mipmap/beijing2"
        />
   <RelativeLayout
       android:id="@+id/relative_focus"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/focus_image"
           android:layout_width="70dp"
           android:layout_height="70dp"
           android:layout_marginTop="30dp"
           android:layout_marginLeft="30dp"
           />
       <TextView
           android:id="@+id/focus_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="text"
           android:textColor="#ffffff"
           android:textSize="14sp"
           android:layout_toRightOf="@+id/focus_image"
           android:layout_marginTop="32dp"
           android:layout_marginLeft="10dp"
           />
       <TextView
           android:id="@+id/focus_address"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="text"
           android:textColor="#ffffff"
           android:textSize="12sp"
           android:layout_toRightOf="@+id/focus_image"
           android:layout_below="@+id/focus_name"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="10dp"
           android:minLines="2"
           android:maxWidth="200dp"
           />
       <ImageView
           android:id="@+id/focus_position"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:background="@mipmap/com_icon_navigation_default"
           android:layout_alignParentRight="true"
           android:layout_marginRight="20dp"
           android:layout_alignBottom="@+id/focus_name"
           android:layout_marginTop="5dp"
           />
   </RelativeLayout>
    <recycler.coverflow.RecyclerCoverFlow
        android:id="@+id/rcf_cinema_flow"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_below="@+id/relative_focus"
        />
    <LinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/banner_tag"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rcf_cinema_flow"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <LinearLayout
            android:id="@+id/checked_layout"
            android:layout_width="20dp"
            android:layout_height="3dp"
            android:background="@drawable/bg_dividing_line_title"
            android:gravity="center"
            android:orientation="horizontal"
            ></LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shedule_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parent_layout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        ></android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:id="@+id/cinema_item_back"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/personal_reset_selector"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:id="@+id/cinema_detail_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="20dp"
            android:background="@mipmap/com_icon_my_default"
            />
    </RelativeLayout>

</RelativeLayout>