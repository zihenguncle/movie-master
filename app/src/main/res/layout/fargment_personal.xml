<?xml version="1.0" encoding="utf-8"?>
<com.bw.movie.custom.Personal_Custom android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <ImageView
        android:id="@+id/personal_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_220"
        android:background="@drawable/mine_bancakgroud"
        />
    <ImageView
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:background="@mipmap/my_icon_remind_default"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_30"
        />
    <ImageView
        android:id="@+id/personal_top_image"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_72"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/top_icon"
        />
    <TextView
        android:id="@+id/personal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="冬天来了"
        android:textColor="#ffffff"
        android:layout_below="@id/personal_top_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:layout_width="@dimen/dp_66"
        android:layout_height="@dimen/dp_28"
        android:background="@drawable/personal_check_in"
        android:text="签到"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/personal_name"
        android:layout_marginTop="@dimen/dp_12"
        android:textSize="@dimen/sp_14"
        android:paddingLeft="@dimen/dp_18"
        android:paddingTop="@dimen/dp_2"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/personal_mine_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_105"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/dp_8"
        android:layout_below="@id/personal_image"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/personal_meassage_my"
            android:layout_width="@dimen/dp_100"
            android:layout_height="86dp">
        <ImageView
            android:id="@+id/personal_message_item"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:background="@mipmap/my_icon_messiage_default"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_30"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的信息"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@id/personal_message_item"
            android:layout_marginLeft="@dimen/dp_20"
            />
        </RelativeLayout>
    </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/personal_record"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_105"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_8"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/dp_8"
        android:layout_below="@id/personal_mine_message"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/personal_fragment_my_focus"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_86">
            <ImageView
                android:id="@+id/personal_record_attention"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:background="@mipmap/my_icon_attention_default"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_30"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="我的关注"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@id/personal_record_attention"
                android:layout_marginLeft="@dimen/dp_20"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/personal_fragment_ticket_record"
            android:layout_width="@dimen/dp_100"
            android:layout_height="86dp">
            <ImageView
                android:id="@+id/personal_ticket_record"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:background="@mipmap/my_icon_rccord_default"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="购票记录"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@id/personal_ticket_record"
                android:layout_marginLeft="@dimen/dp_10"
                />
        </RelativeLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_105"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_8"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_below="@id/personal_record"
        >
    <LinearLayout
        android:id="@+id/personal_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/personal_feedback_advice"
            android:layout_width="@dimen/dp_100"
            android:layout_height="86dp">
            <ImageView
                android:id="@+id/personal_advice_feedback"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:background="@mipmap/my_icon_feedback_default"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_30"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="意见反馈"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@id/personal_advice_feedback"
                android:layout_marginLeft="@dimen/dp_20"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/dp_100"
            android:layout_height="86dp">
            <ImageView
                android:id="@+id/personal_latest_version"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:background="@mipmap/my_icon_version_default"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="最新版本"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@id/personal_latest_version"
                android:layout_marginLeft="@dimen/dp_10"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dp_100"
            android:layout_height="86dp">
            <ImageView
                android:id="@+id/personal_log_out"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:background="@mipmap/my_icon_logout_default"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="推出登录"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@id/personal_log_out"
                android:layout_marginLeft="@dimen/dp_10"
                />
        </RelativeLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
</com.bw.movie.custom.Personal_Custom>