<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        tools:targetApi="lollipop"
        app:cardCornerRadius="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/text_screeningHall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/text_screening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text_screeningHall"
                android:layout_alignBottom="@+id/text_screeningHall"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginLeft="20dp"
                android:text="国语3D"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_beginTime"
                android:layout_below="@id/text_screeningHall"
                android:layout_marginLeft="10dp"
                android:text="14::40"
                android:textSize="24sp"
                android:textColor="#333333"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="25dp"
                android:layout_height="1dp"
                android:background="#333333"
                android:layout_below="@id/text_screeningHall"
                android:layout_toRightOf="@id/text_beginTime"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="3dp"
                android:id="@+id/lines"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_screeningHall"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/text_endTime"
                android:layout_toRightOf="@id/lines"
                android:textColor="#666666"
                android:textSize="16sp"
                android:text="16:16"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="end"
                android:textSize="10sp"
                android:textColor="#666666"
                android:layout_toRightOf="@id/text_endTime"
                android:layout_below="@id/text_screeningHall"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="2dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:layout_marginTop="25dp"
                android:textSize="18sp"
                android:layout_toLeftOf="@+id/text_fare"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_fare"
                android:textSize="28sp"
                android:text="50.5"
                android:layout_marginTop="15dp"
                android:textColor="#b11450"
                android:layout_alignParentRight="true"
                android:layout_toLeftOf="@+id/image_next"
                android:layout_marginRight="35dp"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/image_next"
                android:src="@mipmap/com_icon_next_default"
                android:layout_marginTop="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
