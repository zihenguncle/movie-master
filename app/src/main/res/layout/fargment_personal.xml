<?xml version="1.0" encoding="utf-8"?>
<com.bw.movie.custom.Personal_Custom android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <ImageView
        android:id="@+id/personal_image"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/mine_bancakgroud"
        />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@mipmap/my_icon_remind_default"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        />
    <ImageView
        android:id="@+id/personal_top_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/top_icon"
        />
    <TextView
        android:id="@+id/personal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="冬天来了"
        android:textColor="#ffffff"
        android:layout_below="@id/personal_top_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/personal_sign_in"
        android:layout_width="66dp"
        android:layout_height="28dp"
        android:background="@drawable/personal_check_in"
        android:text="签到"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/personal_name"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        android:paddingLeft="18dp"
        android:paddingTop="2dp"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/personal_mine_message"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="8dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/personal_image"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/personal_meassage_my"
            android:layout_width="100dp"
            android:layout_height="86dp">
        <ImageView
            android:id="@+id/personal_message_item"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@mipmap/my_icon_messiage_default"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的信息"
            android:textColor="#333333"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/personal_message_item"
            android:layout_marginLeft="20dp"
            />
        </RelativeLayout>
    </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/personal_record"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="8dp"
        android:layout_below="@id/personal_mine_message"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/personal_fragment_my_focus"
            android:layout_width="100dp"
            android:layout_height="86dp">
            <ImageView
                android:id="@+id/personal_record_attention"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@mipmap/my_icon_attention_default"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="我的关注"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/personal_record_attention"
                android:layout_marginLeft="20dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/personal_fragment_ticket_record"
            android:layout_width="100dp"
            android:layout_height="86dp">
            <ImageView
                android:id="@+id/personal_ticket_record"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@mipmap/my_icon_rccord_default"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="购票记录"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/personal_ticket_record"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="105dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_below="@id/personal_record"
        >
    <LinearLayout
        android:id="@+id/personal_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/personal_feedback_advice"
            android:layout_width="100dp"
            android:layout_height="86dp">
            <ImageView
                android:id="@+id/personal_advice_feedback"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@mipmap/my_icon_feedback_default"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="意见反馈"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/personal_advice_feedback"
                android:layout_marginLeft="20dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="86dp">
            <ImageView
                android:id="@+id/personal_latest_version"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@mipmap/my_icon_version_default"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="最新版本"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/personal_latest_version"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/personal_message_secede"
            android:layout_width="100dp"
            android:layout_height="86dp">
            <ImageView
                android:id="@+id/personal_log_out"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@mipmap/my_icon_logout_default"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="推出登录"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/personal_log_out"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
</com.bw.movie.custom.Personal_Custom>