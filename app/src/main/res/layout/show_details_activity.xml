<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/show_details_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/cinema_detail_icon_location_default"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="24dp"
        />
    <TextView
        android:id="@+id/show_details_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/show_details_image"
        android:textSize="14sp"
        android:layout_marginTop="32dp"
        android:textColor="#333333"
        android:text="北京"
        android:layout_marginLeft="6dp"
        />

    <RelativeLayout
        android:id="@+id/show_details_relative_search"
        android:layout_width="220dp"
        android:layout_height="24dp"
        android:background="@drawable/view_search_style"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-180dp"
        android:layout_marginTop="30dp"
        >
        <ImageView
            android:id="@+id/show_details_home_search"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/com_icon_search_default"
            />
        <EditText
            android:id="@+id/show_details_edit_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/home_search"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:layout_toLeftOf="@+id/show_details_home_search"
            android:layout_alignParentBottom="true"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:hint="CGV影院"
            android:textSize="12sp"
            android:layout_marginBottom="3dp"
            />
        <TextView
            android:id="@+id/show_details_text_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            />
    </RelativeLayout>

    <RadioButton
        android:id="@+id/show_details_hot"
        android:layout_width="83dp"
        android:layout_height="23dp"
        android:text="热门电影"
        android:gravity="center"
        android:layout_below="@id/show_details_image"
        android:layout_marginTop="20dp"
        android:textColor="@drawable/text_color_selector"
        android:layout_marginLeft="40dp"
        android:textSize="14sp"
        android:button="@null"
        android:background="@drawable/personal_feedback_selector_buuuton"
        />

    <RadioButton
        android:id="@+id/show_deltails_doing"
        android:layout_width="83dp"
        android:layout_height="23dp"
        android:text="正在热映"
        android:gravity="center"
        android:button="@null"
        android:layout_toRightOf="@id/show_details_hot"
        android:layout_below="@id/show_details_image"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textColor="@drawable/text_color_selector"
        android:textSize="14sp"
        android:background="@drawable/personal_feedback_selector_buuuton"
        />
    <RadioButton
        android:id="@+id/show_deltails_todo"
        android:layout_width="83dp"
        android:layout_height="23dp"
        android:text="即将上映"
        android:gravity="center"
        android:layout_below="@id/show_details_image"
        android:layout_marginTop="20dp"
        android:textColor="@drawable/text_color_selector"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/show_deltails_doing"
        android:textSize="14sp"
        android:button="@null"
        android:background="@drawable/personal_feedback_selector_buuuton"
    />

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/show_details_xrecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_deltails_todo"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>