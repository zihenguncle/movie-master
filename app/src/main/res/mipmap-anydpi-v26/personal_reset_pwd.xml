<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/relative_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:Android="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="50dp"
        Android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/personal_message_activity_selector"
        >
    <TextView
        android:id="@+id/personal_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前密码"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/personal_current_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#999999"
        android:textSize="14sp"
        />
    <View
        android:id="@+id/personal_reset_view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#cccccc"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/personal_current_textView"
        />
    <TextView
        android:id="@+id/personal_reset_again_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重置密码为"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginTop="10dp"
        android:layout_below="@id/personal_reset_view1"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/personal_reset_pwd_textView"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:textColor="#999999"
        android:background="@null"
        android:layout_below="@id/personal_reset_view1"
        android:textSize="14sp"
        />

    <View
        android:id="@+id/personal_reset_view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#cccccc"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/personal_reset_pwd_textView"
        />

    <TextView
        android:id="@+id/personal_enter_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请再次输入"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginTop="10dp"
        android:layout_below="@id/personal_reset_view2"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/personal_enter_again_textView"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:textColor="#999999"
        android:background="@null"
        android:layout_below="@id/personal_reset_view2"
        android:textSize="14sp"
        android:layout_marginBottom="20dp"
        />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/personal_reset_selector"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:id="@+id/image_View_Back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="24dp"
            android:background="@mipmap/com_icon_my_default"
            />

    </RelativeLayout>

</RelativeLayout>