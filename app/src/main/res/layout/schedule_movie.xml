<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/personal_reset_selector"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp"
        >
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/text_screeningHall"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="text"
                 android:textColor="#666666"
                 android:textSize="12sp"
                 />
             <TextView
                 android:id="@+id/text_beginTime"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="text"
                 android:layout_marginTop="30dp"
                 android:textColor="#333333"
                 android:textSize="24sp"
                 />
             <View
                 android:layout_width="30dp"
                 android:layout_height="1dp"
                 android:background="#999999"
                 android:layout_marginTop="48dp"
                 android:layout_marginLeft="65dp"
                 ></View>
             <TextView
                 android:id="@+id/text_endTime"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="text"
                 android:layout_marginTop="35dp"
                 android:textColor="#666666"
                 android:textSize="18sp"
                 android:layout_marginLeft="100dp"
                 />
             <TextView
                 android:id="@+id/text_money"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="ï¿¥"
                 android:layout_marginTop="25dp"
                 android:textColor="#666666"
                 android:textSize="18sp"
                 android:layout_marginLeft="200dp"
                 />
             <TextView
                 android:id="@+id/text_fare"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="text"
                 android:layout_marginTop="14dp"
                 android:textColor="#b11450"
                 android:textSize="30sp"
                 android:layout_marginLeft="220dp"
                 />
             <ImageView
                 android:id="@+id/image_next"
                 android:layout_width="24dp"
                 android:layout_height="24dp"
                 android:background="@mipmap/com_icon_next_default"
                 android:layout_marginTop="34dp"
                 android:layout_marginLeft="290dp"
                 android:layout_alignParentRight="true"
                 />
         </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
