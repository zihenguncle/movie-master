<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/top_personal_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="24dp"
        android:text="用户信息"
        android:textSize="14sp"
        android:textColor="#333333"
        />
    <RelativeLayout
        android:id="@+id/personal_message_relative"
        android:layout_width="312dp"
        android:layout_height="188dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_below="@id/top_personal_item"
        android:layout_marginTop="15dp"
        android:background="@drawable/personal_message_activity_selector"
        >
        <TextView
            android:id="@+id/personal_textView_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户头像"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:textColor="#333333"
            />
        <ImageView
            android:id="@+id/personal_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/touxiang"
            />
        <View
            android:id="@+id/personal_view_icon"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/personal_icon"
            android:background="#ccc"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/personal_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personal_view_icon"
            android:text="用户昵称"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/personal_nickName_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/personal_view_icon"
            android:text="你的一边"
            android:textSize="14sp"
            android:textColor="#999999"
            />
        <View
            android:id="@+id/personal_view_nickName"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/personal_nickName_textView"
            android:background="#ccc"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:id="@+id/personal_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personal_view_nickName"
            android:text="用户性别"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/personal_sex_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/personal_view_nickName"
            android:text="男"
            android:textSize="14sp"
            android:textColor="#999999"
            />
        <View
            android:id="@+id/personal_view_sex"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/personal_sex_textView"
            android:background="#ccc"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/personal_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personal_view_sex"
            android:text="出生日期"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/personal_month_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/personal_view_sex"
            android:text="2019-1-24"
            android:textSize="14sp"
            android:textColor="#999999"
            />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/personal_email_phone"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/personal_message_relative"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"
        android:background="@drawable/personal_message_activity_selector"
        >
        <TextView
            android:id="@+id/personal_meassage_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/personal_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="13510084753"
            />
        <View
            android:id="@+id/personal_phone_message"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/personal_meassage_phone"
            android:background="#cccccc"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            android:textColor="#333333"
            android:layout_marginTop="10dp"
            android:layout_below="@id/personal_phone_message"
            />
        <TextView
            android:id="@+id/personal_emails_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personal_phone_message"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="123@163.com"
            android:layout_marginBottom="20dp"
            />
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/personal_reset_pwd"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/personal_email_phone"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="24dp"
            android:background="@drawable/personal_message_activity_selector"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重置密码"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="14sp"
                android:textColor="#333333"
                />
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@mipmap/com_icon_next_default"
                />
            
    </RelativeLayout>
    <ImageView
        android:id="@+id/personal_message_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="20dp"
        android:background="@mipmap/com_icon_my_default"
        />
</RelativeLayout>