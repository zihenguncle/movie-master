<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    >
    <ImageView
        android:id="@+id/image_commentHeadPic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/text_commentUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        android:textColor="#333333"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/image_commentHeadPic"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        />
    <TextView
        android:id="@+id/text_commentContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="12sp"
        android:text="text"
        android:layout_below="@+id/image_commentHeadPic"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/text_commentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:textSize="12sp"
        android:text="text"
        android:layout_below="@+id/text_commentContent"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/image_praise"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@mipmap/com_icon_praise_default"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@+id/text_commentTime"
        android:layout_marginLeft="225dp"
        android:layout_alignBottom="@+id/text_commentTime"

        />
    <TextView
        android:id="@+id/text_greatNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="12sp"
        android:text="text"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text_commentContent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/text_greatNum"
        android:layout_marginTop="10dp"
        android:background="#cccccc"

        ></View>

</RelativeLayout>
