<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/nearbycineam_location"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/cinema_detail_icon_location_default"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="24dp"
        />
    <TextView
        android:id="@+id/nearbycineam_location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nearbycineam_location"
        android:textSize="14sp"
        android:layout_marginTop="32dp"
        android:textColor="#333333"
        android:text="北京"
        android:layout_marginLeft="6dp"
        />

    <RelativeLayout
        android:id="@+id/relative_search"
        android:layout_width="220dp"
        android:layout_height="24dp"
        android:background="@drawable/view_search_style"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-180dp"
        android:layout_marginTop="30dp"
        >
        <ImageView
            android:id="@+id/home_search"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/com_icon_search_default"
            />
        <EditText
            android:id="@+id/home_edit_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/home_search"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:layout_toLeftOf="@+id/home_text_search"
            android:layout_alignParentBottom="true"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:hint="CGV影院"
            android:textSize="12sp"
            android:layout_marginBottom="3dp"
            />
        <TextView
            android:id="@+id/home_text_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            />
    </RelativeLayout>
    <RadioButton
        android:id="@+id/recommend_cinema"
        android:layout_width="83dp"
        android:layout_height="23dp"
        android:text="推荐影院"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@drawable/text_color_selector"
        android:layout_marginLeft="80dp"
        android:textSize="14sp"
        android:button="@null"
        android:background="@drawable/personal_feedback_selector_buuuton"
        android:layout_below="@+id/relative_search"
        android:elevation="4dp"
        android:checked="true"
        />

    <RadioButton
        android:id="@+id/nearby_cinema"
        android:layout_width="83dp"
        android:layout_height="23dp"
        android:text="附近影院"
        android:gravity="center"
        android:button="@null"
        android:layout_toRightOf="@id/recommend_cinema"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="32dp"
        android:textColor="@drawable/text_color_selector"
        android:textSize="14sp"
        android:background="@drawable/personal_feedback_selector_buuuton"
        android:layout_below="@+id/relative_search"
        android:elevation="4dp"
        />
   <android.support.v7.widget.RecyclerView
       android:id="@+id/cinema_recyclerView"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@+id/nearby_cinema"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="24dp"
       android:layout_marginRight="24dp"></android.support.v7.widget.RecyclerView>



</RelativeLayout>