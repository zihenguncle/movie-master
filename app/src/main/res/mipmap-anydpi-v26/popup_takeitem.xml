<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#0f0"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/takeitem_headimage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/icon_my_default"
        />
    <TextView
        android:id="@+id/takeitem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/takeitem_headimage"
        android:layout_marginTop="31dp"
        android:text="this is name"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorGray"
        />
    <TextView
        android:id="@+id/takeitem_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_below="@+id/takeitem_headimage"
        android:layout_marginTop="12dp"
        android:textColor="@color/colorGray"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/takeitem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/takeitem_content"
        android:textColor="@color/colorGray_9"
        android:layout_marginTop="10dp"
        android:text="this is date"
        />

    <ImageView
        android:id="@+id/takeitem_praise"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignBottom="@+id/takeitem_date"
        android:background="@mipmap/com_icon_praise_default"
        android:layout_toLeftOf="@+id/takeitem_praisenum"
        android:layout_marginRight="6dp"
        />
    <TextView
        android:id="@+id/takeitem_praisenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:text="num"
        android:layout_alignBottom="@+id/takeitem_date"
        />

</RelativeLayout>
