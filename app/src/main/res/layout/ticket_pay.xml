<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="30dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp"
        >
        <TextView
            android:id="@+id/ticket_pay_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="111111"
            android:textSize="14sp"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/ticket_pay_time_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:textSize="16sp"
            android:textColor="#f77421"
            android:layout_marginLeft="10dp"
            android:text="14:40:20-"
            />
        <TextView
            android:id="@+id/ticket_pay_time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:textSize="16sp"
            android:textColor="#f77421"
            android:layout_marginLeft="80dp"
            android:text="14:40:20"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:text="开始时间  结束时间"
            android:textSize="14sp"
            android:textColor="#f77421"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="10dp"
            android:text="订单号:"
            android:textSize="14dp"
            android:textColor="#666666"
            />
        <TextView
            android:id="@+id/indent_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="90dp"
            android:textSize="14sp"
            android:textColor="#666666"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="10dp"
            android:text="下单时间:"
            android:textSize="14sp"
            android:textColor="#666666"
            />
        <TextView
            android:id="@+id/pay_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="115dp"
            android:textColor="#666666"
            android:textSize="14sp"
            android:text="2018-5-7"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="影院:"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/cimeama_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="140dp"
            android:textColor="#666666"
            android:textSize="14sp"
            android:text="保利国际影院"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="影厅:"
            android:layout_marginTop="165dp"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="#666666"
            />
        <TextView
            android:id="@+id/address_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="165dp"
            android:layout_marginLeft="50dp"
            android:text="hahhahaha"
            android:textColor="#666666"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666666"
            android:text="数量:"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/ticket_sum_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="50dp"
            android:textColor="#666666"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额:"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="213dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/sum_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="234"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginTop="213dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="10dp"
            />


    </android.support.v7.widget.CardView>


</RelativeLayout>