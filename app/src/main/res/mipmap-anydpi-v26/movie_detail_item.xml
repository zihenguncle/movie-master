<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    >
    <ImageView
        android:id="@+id/image_location"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/cinema_detail_icon_location_default"
        />
    <TextView
        android:id="@+id/text_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_toRightOf="@+id/image_location"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:id="@+id/image_phone"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/cinema_detail_icon_phone_default"
        android:layout_below="@+id/image_location"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="6dp"
        />
    <TextView
        android:id="@+id/text_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_toRightOf="@+id/image_phone"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/text_address"
        android:layout_marginTop="30dp"
        />
    <ImageView
        android:id="@+id/image_route"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/cinema_detail_icon_route_default"
        android:layout_below="@+id/image_phone"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="7dp"
        />
    <TextView
        android:id="@+id/text_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="乘车路线"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_toRightOf="@+id/image_phone"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/text_phone"
        android:layout_marginTop="22dp"
        />
    <TextView
        android:id="@+id/take_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_route"
        android:textSize="14sp"
        android:textColor="#333333"
        android:text="乘车路线"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="7dp"
        />

</RelativeLayout>
