<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity"
    android:background="@mipmap/bitmap"
    >
    <ImageView
        android:id="@+id/image_login_phone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/log_icon_phone_default"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="130dp"
        />

    <EditText
        android:id="@+id/login_phone"
        android:layout_width="190dp"
        android:layout_height="42dp"
        android:hint="手机号"
        android:layout_marginTop="125dp"
        android:layout_toRightOf="@+id/image_login_phone"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:textColorHint="#eeeeee"
        android:background="@null"
        android:textColor="#eeeeee"
        android:inputType="number"
        />
    <View
        android:id="@+id/view_login_phone"
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:background="#1Affffff"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/login_phone"
        ></View>
    <LinearLayout
        android:id="@+id/linear_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_login_phone"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/image_login_pass"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:src="@mipmap/log_icon_lock_default"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            />
        <EditText
            android:id="@+id/login_pass"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:hint="登录密码"
            android:layout_below="@+id/view_login_phone"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/image_login_pass"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:textColorHint="#eeeeee"
            android:background="@null"
            android:textColor="#eeeeee"
            android:inputType="number"
            android:password="true"
            android:layout_weight="8"
            />
        <ImageView
            android:id="@+id/image_login_eye"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:src="@mipmap/log_icon_eye_default"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/view_login_phone"
            android:layout_marginTop="37dp"
            android:layout_marginRight="70dp"
            android:layout_weight="1"
            />
    </LinearLayout>


    <View
        android:id="@+id/view_login_pass"
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:background="#1Affffff"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/linear_pass"
        ></View>

    <LinearLayout
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/view_login_pass"
    android:orientation="horizontal"
    >
    <CheckBox
        android:id="@+id/checkbox_remember"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="20dp"
        android:text="记住密码"
        android:theme="@style/checkbox_remember"
        android:textSize="12sp"
        android:textColor="@color/colorWhite"
        />
    <TextView
        android:id="@+id/text_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="快速注册"
        android:layout_weight="2"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />
</LinearLayout>

        <Button
        android:id="@+id/but_login"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linear"
        android:layout_marginTop="130dp"
        android:background="@drawable/but_login"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="18sp"
            />
    <LinearLayout
        android:id="@+id/linear_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/but_login"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >
        <View
            android:id="@+id/view_line1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#ffffff"
            android:layout_weight="3"
            android:layout_gravity="center"
            ></View>
        <TextView
            android:id="@+id/text_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=" 第三方账号快速登录"
            android:textSize="10sp"
            android:textColor="#ffffff"
            android:layout_weight="4"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            />
        <View
            android:id="@+id/view_line2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#ffffff"
            android:layout_below="@+id/but_login"
            android:layout_weight="3"
            android:layout_gravity="center"
            ></View>
    </LinearLayout>
    <ImageView
        android:id="@+id/weixin"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/log_icon_weixin_default"
        android:layout_below="@+id/linear_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        />

</RelativeLayout>