<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="167dp"
    android:background="#BFC1C1C1"
    >
    <LinearLayout
        android:id="@+id/linear_camera"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:gravity="center"

        >
        <ImageView
            android:id="@+id/image_camera"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/common_btn_camera_black"
            />
        <TextView
            android:id="@+id/cancme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍摄"
            android:layout_toRightOf="@+id/image_camera"
            android:textSize="20dp"
            android:textColor="#666666"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_picture"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linear_camera"

        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/common_btn_picture"
            />
        <TextView
            android:id="@+id/pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相册"
            android:layout_toRightOf="@+id/image_camera"
            android:textSize="20sp"
            android:textColor="#666666"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linear_picture"
        android:layout_marginTop="10dp"
        android:background="#f2f2f2"
        >
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linear_line"
        >
        <TextView
            android:id="@+id/text_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_toRightOf="@+id/image_camera"
            android:textSize="20sp"
            android:textColor="#666666"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>


</RelativeLayout>
