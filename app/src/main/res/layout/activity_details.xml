<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_success.home_fragment.activity.DetailsActivity"
    android:background="@mipmap/beijing3"
    >

    <ImageView
        android:id="@+id/details_image_boss"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/details_image_head"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:background="@mipmap/com_icon_movie_default"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电影详情"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/details_image_head"
        android:layout_marginTop="35dp"
        android:textColor="@color/colorWhite"
        />
    <ImageView
        android:id="@+id/details_image_love"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@mipmap/com_icon_collection_default"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        />
    <TextView
        android:id="@+id/details_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        />
    <ImageView
        android:id="@+id/details_image"
        android:layout_width="259dp"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/details_name"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/details_details_button"
        android:layout_width="58dp"
        android:layout_height="24dp"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:layout_below="@id/details_image"
        android:text="详情"
        android:gravity="center"
        android:background="@drawable/details_button_radius"
        android:layout_marginLeft="24dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/details_notice_button"
        android:layout_width="58dp"
        android:layout_height="24dp"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:layout_below="@id/details_image"
        android:text="预告"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/details_details_button"
        android:gravity="center"
        android:background="@drawable/details_button_radius"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/details_stage_button"
        android:layout_width="58dp"
        android:layout_height="24dp"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:layout_below="@id/details_image"
        android:text="剧照"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/details_notice_button"
        android:gravity="center"
        android:background="@drawable/details_button_radius"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/details_video_button"
        android:layout_width="58dp"
        android:layout_height="24dp"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:layout_below="@id/details_image"
        android:text="影评"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="24dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/details_stage_button"
        android:gravity="center"
        android:background="@drawable/details_button_radius"
        android:layout_marginTop="40dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/details_image_back_bottom"
        >
        <ImageView
            android:id="@+id/details_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/icon_my_default"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            />
        <TextView
            android:id="@+id/details_gotopay"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/default_movie_buy_radius"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:text="购票"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            />
    </RelativeLayout>

</RelativeLayout>