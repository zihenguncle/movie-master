<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginTop="3dp"
    android:background="@drawable/video_ticket_item_selector"
    >
    
    <ImageView
        android:id="@+id/video_ticket_item_imageview"
        android:layout_width="103dp"
        android:layout_height="124dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_launcher_background"
        />

    <TextView
        android:id="@+id/video_ticket_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="铁血使命"
        android:textSize="14dp"
        android:textColor="#333333"
        android:layout_toRightOf="@id/video_ticket_item_imageview"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/video_ticket_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/video_ticket_item_name"
        android:layout_toRightOf="@id/video_ticket_item_imageview"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:text="1234r12333333333333444444444444444444444444444444444444444444444444444444444444444444444444444444444444444444444444444443333333333"
        android:ellipsize="end"
        android:maxLines="5"
        android:textSize="12sp"
        android:textColor="#333333"
        />
    <TextView
        android:id="@+id/video_ticket_item_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/video_ticket_item_imageview"
        android:layout_below="@id/video_ticket_item_title"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="1997-12-01"
        android:textColor="#999999"
        android:textSize="12sp"
        />



</RelativeLayout>