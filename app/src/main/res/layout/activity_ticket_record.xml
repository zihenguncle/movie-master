<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_success.person.person_activity.Personal_Message_TicketActivity">
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/group_ticket"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        >
        <RadioButton
            android:layout_width="83dp"
            android:layout_height="23dp"
            android:button="@null"
            android:textColor="@drawable/text_color_selector"
            android:background="@drawable/personal_feedback_selector_buuuton"
            android:text="待付款"
            android:paddingLeft="27dp"
            android:id="@+id/my_waitpay_radio"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="32dp"
            android:textSize="14sp"
            android:checked="true"
            />
        <RadioButton
            android:layout_width="83dp"
            android:layout_height="23dp"
            android:button="@null"
            android:text="已完成"
            android:paddingLeft="28dp"
            android:textColor="@drawable/text_color_selector"
            android:background="@drawable/personal_feedback_selector_buuuton"
            android:textSize="14sp"
            android:id="@+id/my_complete_radio"
            />
    </RadioGroup>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/my_ticket_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/group_ticket"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="24dp"/>
</RelativeLayout>